= form_for @parkinghouse do |f|
  - if @parkinghouse.errors.any?
    #error_explanation
      %h2= "#{pluralize(@parkinghouse.errors.count, "error")} prohibited this parkinghouse from being saved:"
      %ul
        - @parkinghouse.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name, "Név: "
    = f.text_field :name
  .field
    = f.label :address, "Cím: "
    = f.text_field :address
  .field
    = f.label :description, "Leírás :"
    = f.text_area :description
  .field 
    = f.label :image, "Kép feltölés: "
    = f.file_field :image
  .actions
    = f.submit 'Save'
