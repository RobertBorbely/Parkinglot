= form_for @parkinghouse do |f|
  - if @parkinghouse.errors.any?
    #error_explanation
      %h2= "#{pluralize(@parkinghouse.errors.count, "error")} prohibited this parkinghouse from being saved:"
      %ul
        - @parkinghouse.errors.full_messages.each do |msg|
          %li= msg
  %form{ :role => "form" }
    .form-group
      = f.label :name, "Név: "
      = f.text_field :name, :class => "form-control"
    .form-group
      = f.label :address, "Cím: "
      = f.text_field :address, :class => "form-control"
    .form-group
      = f.label :description, "Leírás :"
      = f.text_area :description, :class => "form-control"
    .form-group
      = f.label :image, "Kép feltölés: "
      = f.file_field :image
    .actions
      = f.submit 'Save', :class => "btn btn-success"
